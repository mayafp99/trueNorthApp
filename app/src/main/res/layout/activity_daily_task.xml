<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/background"
    android:fontFamily="@font/love">
    <TextView
        android:id="@+id/headerText"
        android:text="Today's Tasks:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/augustjuly"
        android:textSize="40dp"
        android:textColor="@color/text"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerText"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:nestedScrollingEnabled="true"
        android:fontFamily="@font/love">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/text"
        android:clickable="true"
        android:contentDescription="@string/add_task_button"
        android:tint="@color/task_background"
        app:fabCustomSize="70dp"
        app:maxImageSize="40dp"
        app:srcCompat="@drawable/add"
        app:tint="@color/task_background"
        android:fontFamily="@font/love"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/night"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="125dp"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/add"
        android:accessibilityTraversalBefore="@id/headerText"
        android:backgroundTint="@color/text"
        android:clickable="true"
        android:contentDescription="@string/night_mode_button"
        android:contextClickable="true"
        android:tint="@color/task_background"
        app:fabCustomSize="50dp"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/night"
        app:tint="@color/task_background"
        android:fontFamily="@font/love"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/day"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="188dp"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/add"
        android:accessibilityTraversalBefore="@id/headerText"
        android:backgroundTint="@color/text"
        android:clickable="true"
        android:contentDescription="@string/night_mode_button"
        android:contextClickable="true"
        android:tint="@color/task_background"
        app:fabCustomSize="50dp"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/sun"
        app:tint="@color/task_background"
        android:fontFamily="@font/love"/>

</RelativeLayout>